/* --- DASHBOARD V2: TACTICAL COHERENCE --- */

/* Admin Panel Action Buttons */
QPushButton#admin_action_btn {
    background-color: transparent;
    color: @text;
    border: 1px solid @border;
    border-radius: 8px;
    padding: 12px 20px;
    font-weight: 700;
    font-size: 13px;
}

QPushButton#admin_action_btn:hover {
    background-color: @primary;
    color: white;
    border-color: @primary;
}

QPushButton#admin_action_btn:pressed {
    background-color: @accent;
}

/* Sidebar - Deep Navigation */
QFrame#sidebar { 
    background: @bg;
    border-right: 1px solid @border;
}

#sidebar_logo {
    font-size: 16px; 
    font-weight: 900; 
    color: @primary; 
    letter-spacing: 4px; 
    margin: 40px 0px;
}

#lbl_user_info {
    font-weight: 700; 
    color: @text; 
    font-size: 13px;
    padding: 10px;
}

#btn_logout {
    background: transparent; 
    border: 1px solid @danger; 
    color: @danger;
    border-radius: 8px; 
    font-size: 12px;
}
#btn_logout:hover {
    background: @danger;
    color: white;
}

QPushButton#nav_btn {
    text-align: left; 
    padding: 10px 20px; 
    border-radius: 10px;
    font-size: 11px; 
    font-weight: 600; 
    color: @text_dim; 
    margin: 2px 12px; 
    background: transparent;
    border: none;
    text-transform: uppercase;
    letter-spacing: 1px;
}
QPushButton#nav_btn:hover { 
    background-color: @border; /* Use themed border for subtle tint */
    color: @primary; 
}
QPushButton#nav_btn:checked {
    background: @bg_sec;
    color: @primary;
    font-weight: 800;
}

/* --- SAAS COMMERCIAL: PRODUCT-READY HUB --- */

#dashboard_scroll, #ai_guardian_scroll { 
    background: transparent; 
    border: none; 
}

/* AI Guardian Tactical Components */
#ai_container_tactical, #radar_box_tactical {
    background-color: transparent;
    border: none;
    border-radius: 0px;
}

#ai_recommendation_card {
    background-color: @bg;
    border: 1px solid @border;
    border-radius: 6px;
}

#ai_recommendation_msg {
    color: @text;
    font-size: 10px;
    font-family: 'Consolas';
    font-weight: 700;
}

#ai_action_btn {
    background: transparent;
    color: @text_dim;
    font-size: 9px;
    font-weight: 700;
    border: 1px solid @border;
    border-radius: 3px;
    padding: 0 8px;
    font-family: 'Consolas';
}

#ai_action_btn:hover {
    background-color: @bg_sec;
    color: @primary;
    border-color: @primary;
}

#ai_action_btn[ghost="true"] {
    border: 1px solid rgba(148, 163, 184, 0.3);
    color: rgba(255, 255, 255, 0.45);
    background: rgba(255, 255, 255, 0.05);
}
#ai_action_btn[ghost="true"]:hover {
    border: 1px solid @ghost_primary_40;
    color: @primary;
    background: @ghost_primary_10;
}

#ai_log_header {
    color: @text_dim;
    font-size: 9px;
    font-weight: 800;
    font-family: 'Consolas';
    letter-spacing: 1px;
    background: transparent;
    margin-bottom: 4px;
}

#ai_log_ok {
    color: @text_dim;
    font-size: 10px;
    font-family: 'Consolas';
    font-weight: 700;
}
#ai_log_ok[ghost="true"] { color: @ghost_text_dim_45; }

/* 1. Global Page Title Style */
#dashboard_page_title {
    color: @text;
    font-size: 28px;
    font-weight: 600;
    letter-spacing: -0.02em;
    background: transparent;
    padding-bottom: 24px;
}
#dashboard_page_title[ghost="true"] { color: rgba(255, 255, 255, 0.3); }

/* 1b. Global Settings & Protocol Headers */
#settings_title, #admin_title {
    color: @text;
    font-size: 28px;
    font-weight: 600;
    letter-spacing: -0.02em;
    background: transparent;
    border: none;
    padding-bottom: 5px;
}

#settings_category_label, #admin_category_label {
    color: @text_dim;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: transparent;
    border: none;
    padding: 10px 0px;
}

/* 2. Standard SaaS Cards */
#GlassCard, #ai_guardian_card, #health_card, #card_auth, #card_health, #card_analytics {
    background-color: @bg_dashboard_card;
    border: 1px solid @border;
    border-radius: 14px;
}
#GlassCard[ghost="true"], 
#ai_guardian_card[ghost="true"], 
#health_card[ghost="true"], 
#card_auth[ghost="true"], 
#card_health[ghost="true"], 
#card_analytics[ghost="true"],
#ai_recommendation_card[ghost="true"],
#activity_feed_card[ghost="true"],
#vault_stats_card[ghost="true"] {
    background-color: @ghost_bg; /* Theme-aware ghost background */
    border: 1px solid @ghost_border;
}

#GlassCard:hover, #ai_guardian_card:hover {
    border-color: @primary;
}

/* 3. Typography & Headers */
#dashboard_card_title {
    color: @text_dim;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0px;
}
#dashboard_card_title[ghost="true"] {
    color: @ghost_text_dim; /* Translucent HUD header (Ghost) */
}

/* 4. KPI System (Product Level) */
#info_tile_value {
    color: @text;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: -0.01em;
    background: transparent;
    qproperty-alignment: 'AlignCenter';
}
#info_tile_value[ghost="true"] { color: @text; opacity: 0.85; }
#info_tile_title[ghost="true"] { color: @ghost_text_dim_45; }

#info_tile_title {
    color: @text_dim;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    background: transparent;
}

/* 5. Tactical Metrics (Internal Details) */
#tactical_metric_title, #tactical_metric_label {
    font-size: 13px;
    font-weight: 400;
    color: @text_dim;
    background: transparent;
}

#tactical_metric_value {
    font-size: 13px;
    font-weight: 600;
    color: @text;
    background: transparent;
    font-family: 'Consolas', monospace;
}

/* 6. Status Indicators */
#global_security_banner {
    background-color: @ghost_danger_10;
    border: 1px solid @ghost_danger_20;
    border-radius: 10px;
}

#global_warning_label {
    color: @danger;
    font-weight: 600;
    font-family: 'Consolas';
    letter-spacing: 1px;
}

/* 7. Action Buttons (SaaS Look) */
#btn_primary_saas, #btn_add_fancy {
    background: @primary;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    padding: 10px 16px;
}

#btn_primary_saas:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 @accent, stop:1 @primary);
}

/* 8. Table Styling (Professional SaaS) */
#vault_table, #audit_table {
    background: transparent;
    border: none;
    gridline-color: transparent;
    selection-background-color: @border;
    color: @text;
}

QTableWidget::item {
    border-bottom: 1px solid @border;
    padding: 12px;
}

QHeaderView::section {
    background: transparent;
    color: @text_dim;
    font-weight: 600;
    font-size: 11px;
    padding: 15px;
    border: none;
    border-bottom: 2px solid @border;
}

/* 9. Sidebar Harmony */
#sidebar {
    background: @bg_sec;
    border-right: 1px solid @border;
}

#nav_btn {
    background: transparent;
    color: @text_dim;
    text-align: left;
    padding-left: 20px;
    border: none;
    border-radius: 8px;
    margin: 2px 10px;
    font-size: 13px;
    font-weight: 500;
}

#nav_btn:checked {
    background: @border;
    color: @primary;
    font-weight: 600;
}

#nav_btn:hover {
    background: rgba(255, 255, 255, 0.03);
    color: @text;
}

#sidebar_logo {
    font-size: 14px;
    font-weight: 600;
    color: @text;
    letter-spacing: 4px;
    margin: 40px 0;
    background: transparent;
}

#lbl_user_info {
    font-weight: 500;
    color: @text_dim;
    font-size: 13px;
    background: transparent;
}

#IdentityBanner {
    background: transparent;
    border: none;
    padding-bottom: 20px;
}

#v_name {
    color: @text;
    font-size: 28px;
    font-weight: 600;
    letter-spacing: -0.02em;
}

#v_type {
    color: @text_dim;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
}

/* 10. Dashboard Search HUD */
#dash_search_input {
    background: @bg_sec;
    color: @text;
    border: 1px solid @border;
    border-radius: 10px;
    padding: 0 15px;
    font-family: 'Consolas';
    font-size: 13px;
    font-weight: 500;
}

#dash_search_input:focus {
    border-color: @primary;
    background: rgba(15, 23, 42, 0.6);
}

/* 11. Custom Control Elements */
#activity_filter_btn {
    background: transparent;
    color: @text_dim;
    font-size: 10px;
    font-weight: 700;
    border: 1px solid transparent;
    border-radius: 6px;
    padding: 0 12px;
}

#activity_filter_btn:checked {
    background: @border;
    color: @primary;
    border: 1px solid @primary;
}

#panic_btn {
    background: transparent;
    color: @danger;
    border: 2px solid @danger;
    border-radius: 10px;
    font-weight: 950;
    font-size: 11px;
    letter-spacing: 2px;
    padding: 0 24px;
}

#panic_btn:hover {
    background: @danger;
    color: white;
}

/* --- VAULT TABLE SPECIFICS --- */
#table_eye_btn {
    background-color: transparent;
    border: 1px solid @border;
    border-radius: 6px;
    font-size: 14px;
    padding: 0px;
    margin: 0px;
    color: @primary;
}
#table_eye_btn:hover {
    background-color: @bg_sec;
    border-color: @primary;
}

#vault_pwd_label {
    color: @text_dim;
    font-size: 13px;
    font-family: 'Consolas', monospace;
    font-weight: 600;
}

#vault_pwd_label[visible_state="true"] {
    color: @text;
    font-weight: 800;
}

#vault_pwd_label[protected_state="true"] {
    color: @danger;
    background-color: @ghost_danger_10;
    border: 1px solid @ghost_danger_20;
    border-radius: 4px;
    padding: 2px 6px;
    font-size: 11px;
    font-weight: 900;
}

/* Row Toggles and Icons */
#table_selection_lbl {
    background: transparent;
    font-size: 14px;
    font-weight: bold;
    padding: 5px;
}
#table_selection_lbl[selected="true"] { color: @primary; }
#table_selection_lbl[selected="false"] { color: @text_dim; }

#table_service_container { background: transparent; }
#table_service_icon {
    background: transparent;
    font-size: 14px;
}
#table_service_icon[is_private="true"] { color: @warning; }
#table_service_icon[is_private="false"] { color: @primary; }

#table_service_name {
    background: transparent;
    font-size: 12px;
    font-weight: 700;
    color: @text;
}
#table_service_name[is_deleted="true"] {
    color: @text_dim;
    text-decoration: line-through;
}

#table_status_lbl {
    background: transparent;
    font-size: 9px;
    font-weight: 900;
    font-family: 'Consolas', monospace;
    letter-spacing: 1px;
}
#table_status_lbl[state="ok"] { color: @secondary; }
#table_status_lbl[state="locked"] { color: @danger; }

/* --- AI GUARDIAN: TACTICAL HEADER --- */
#ai_dot_indicator {
    border-radius: 6px;
    background-color: @text_dim;
}
#ai_dot_indicator[state="success"] { background-color: @success; }
#ai_dot_indicator[state="warning"] { 
    background-color: @warning; 
}
#ai_dot_count {
    color: @text_dim;
    font-weight: 800;
    font-family: 'Consolas';
    font-size: 14px;
    background: transparent;
}
#ai_dot_count[status="warning"] { color: @warning; }
#ai_dot_count[status="critical"] { color: @danger; }
#ai_dot_count[ghost="true"] { color: @ghost_text_dim_85; }
#ai_dot_count[ghost="true"][status="warning"] { color: @ghost_warning_85; }
#ai_dot_count[ghost="true"][status="critical"] { color: @ghost_danger_85; }

#ai_status_label { font-weight: 700; font-size: 11px; letter-spacing: 0.5px; }
#ai_status_label[status="success"] { color: @success; }
#ai_status_label[ghost="true"] { color: @ghost_text_dim_45; }
#ai_status_label[ghost="true"][status="success"] { color: @ghost_success_85; }

/* --- TACTICAL METRIC UNITS --- */
#tactical_bar_container {
    background-color: @bg_sec;
    border-radius: 3px;
    height: 6px;
    min-height: 6px;
    max-height: 6px;
}
#tactical_bar_fill {
    background-color: @primary;
    border-radius: 3px;
    height: 6px;
    min-height: 6px;
    max-height: 6px;
}
#tactical_bar_fill[status="success"] { background-color: @success; }

/* GHOST MODE OVERRIDES: TACTICAL UNITS */
#tactical_bar_fill[ghost="true"] {
    background-color: @ghost_primary;
    border: 1px solid @primary;
}
#tactical_bar_fill[ghost="true"][status="warning"] { background-color: @ghost_warning; border-color: @warning; }
#tactical_bar_fill[ghost="true"][status="critical"] { background-color: @ghost_danger; border-color: @danger; }
#tactical_bar_fill[ghost="true"][status="success"] { background-color: @ghost_success; border-color: @success; }
#tactical_bar_fill[ghost="true"][status="info"] { background-color: @ghost_primary; border-color: @primary; }

#tactical_metric_value[status="warning"] { color: @warning; font-weight: 900; font-family: 'Consolas'; }
#tactical_metric_value[status="critical"] { color: @danger; font-weight: 900; font-family: 'Consolas'; }
#tactical_metric_value[status="success"] { color: @success; font-weight: 900; font-family: 'Consolas'; }
#tactical_metric_value[status="info"] { color: @primary; font-weight: 900; font-family: 'Consolas'; }

/* --- AI RECOMMENDATIONS (SEMANTIC SEVERITY) --- */
#ai_recommendation_card[severity="critical"] { border-left: 4px solid @danger; }
#ai_recommendation_card[severity="high"] { border-left: 4px solid @warning; }
#ai_recommendation_card[severity="medium"] { border-left: 4px solid @primary; }

#tactical_metric_label {
    font-size: 14px;
    font-weight: 800;
    font-family: 'Consolas';
    text-transform: uppercase;
    background: transparent;
}

/* --- PROTECTION STATUS SEMANTICS --- */
#protection_status_lbl[state="critical"] { color: @danger; font-weight: 900; font-size: 13px; letter-spacing: 1.5px; }
#protection_status_lbl[state="warning"] { color: @warning; font-weight: 900; font-size: 13px; letter-spacing: 1.5px; }
#protection_status_lbl[state="success"] { color: @success; font-weight: 900; font-size: 13px; letter-spacing: 1.5px; }
#protection_status_lbl[ghost="true"] { opacity: 0.85; }

#protection_bar_fill[state="critical"] { background-color: @danger; border-radius: 3px; height: 6px; }
#protection_bar_fill[state="warning"] { background-color: @warning; border-radius: 3px; height: 6px; }
#protection_bar_fill[state="success"] { background-color: @success; border-radius: 3px; height: 6px; }

/* --- TOPBAR & SEARCH COMPONENTS --- */
#session_protection_bar {
    background: @bg_sec;
    border: 1px solid @border;
    border-radius: 3px;
}
#session_protection_bar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 @success, stop:1 @primary);
    border-radius: 2px;
}

#dash_search_input {
    background: @bg_sec;
    color: @text;
    border: 1px solid @border;
    border-radius: 10px;
    padding: 0 15px;
    font-family: 'Consolas';
    font-size: 14px;
    font-weight: 800;
    letter-spacing: 0.5px;
}
#dash_search_input:focus {
    border-color: @primary;
    background: @bg;
}

#btn_add_fancy {
    background: @primary;
    color: @text_on_primary; 
    font-family: 'Consolas'; 
    font-weight: 800; 
    font-size: 11px;
    border: none; 
    border-radius: 8px; 
    letter-spacing: 1px;
}
#btn_add_fancy:hover {
    background: @accent;
}

/* --- TACTICAL TABLE COMPONENTS --- */
#table_copy_btn {
    background: @ghost_primary_10;
    color: @primary;
    border: 1px solid @ghost_primary_40;
    border-radius: 6px;
    padding: 0px 4px;
    font-size: 11px;
    font-family: 'Segoe UI', 'Arial';
    font-weight: 800;
}
#table_copy_btn:hover {
    background: @primary;
    color: white;
    border-color: @primary;
}

/* --- LARGE STAT TILES --- */
#stat_value_tile {
    font-size: 18px; 
    font-weight: 950; 
    color: @text;
    background: transparent;
    qproperty-alignment: 'AlignCenter';
}
#stat_value_tile[ghost="true"] { opacity: 0.85; }
#stat_value_tile[status="critical"] { color: @danger; }
#stat_value_tile[status="warning"] { color: @warning; }
#stat_value_tile[status="success"] { color: @success; }
#stat_value_tile[status="info"] { color: @primary; }

/* --- THREAT INTEL SMALL LABELS --- */
#threat_intel_small {
    font-size: 10px;
    font-weight: 800;
    font-family: 'Consolas';
    background: transparent;
}
#threat_intel_small[ghost="true"] { opacity: 0.85; }
#threat_intel_small[status="critical"] { color: @danger; }
#threat_intel_small[status="warning"] { color: @warning; }
#threat_intel_small[status="success"] { color: @secondary; }

/* --- FLOATING ACTION BAR (PREMIUM GHOST) --- */
#floating_ghost_btn {
    background: transparent;
    border: none;
    border-radius: 10px;
    padding: 10px 18px;
    font-weight: 800;
    font-size: 10px;
    letter-spacing: 1.5px;
}
#floating_ghost_btn[type="primary"] { color: @primary; }
#floating_ghost_btn[type="primary"]:hover { background: @ghost_primary_15; color: white; }
#floating_ghost_btn[type="danger"] { color: @danger; }
#floating_ghost_btn[type="danger"]:hover { background: @ghost_danger_15; color: white; }
#floating_ghost_btn[type="success"] { color: @success; }
#floating_ghost_btn[type="success"]:hover { background: @ghost_success_15; color: white; }

#floating_selection_info {
    color: @text_dim;
    font-size: 9px;
    font-weight: 900;
    letter-spacing: 3px;
    background: rgba(255, 255, 255, 0.03);
    padding: 6px 15px;
    border-radius: 6px;
}

#float_bar_clear_btn {
    background: rgba(255, 255, 255, 0.05); 
    color: @text_dim; 
    font-size: 9px; 
    font-weight: 800; 
    border-radius: 6px;
    padding: 0 12px;
    letter-spacing: 1px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}
#float_bar_clear_btn:hover {
    background: @ghost_danger_15;
    color: @danger; 
    border: 1px solid @ghost_danger_40;
}

/* --- ADDITIONAL TACTICAL POLISH --- */
#admin_alert_badge {
    color: @danger;
    font-weight: 900;
    font-size: 10px;
    padding: 4px;
    border: 1px solid @danger;
    border-radius: 4px;
}

#info_tile_icon {
    font-size: 16px;
    background: transparent;
}

/* --- GHOST MODE: GLOBAL UI OVERRIDES --- */
#btn_add_fancy[ghost="true"], #btn_primary_saas[ghost="true"] {
    background: @ghost_primary;
    border: 1px solid @primary;
    color: @primary;
}
#btn_add_fancy[ghost="true"]:hover {
    background: @ghost_primary_20;
}

/* Specific ghost overrides for danger elements */
#global_security_banner[ghost="true"] {
    background-color: @ghost_danger;
    border: 1px solid @danger;
}

#quick_action_btn[ghost="true"] {
    background: @ghost_bg_dark;
    border-radius: 8px;
    border: 1px solid @ghost_border; 
}
#quick_action_btn[ghost="true"][btn_type="primary"] { border: 1px solid @ghost_primary_30; color: @primary; background: @ghost_primary; }
#quick_action_btn[ghost="true"][btn_type="ai_sec"] { border: 1px solid @ghost_ai_sec_30; color: @ai_sec; background: @ghost_ai_sec_08; }
#quick_action_btn[ghost="true"][btn_type="ai"] { border: 1px solid @ghost_ai_30; color: @ai; background: @ghost_ai_08; }
#quick_action_btn[ghost="true"][btn_type="success"] { border: 1px solid @ghost_success_30; color: @success; background: @ghost_success; }
#quick_action_btn[ghost="true"][btn_type="danger"] { border: 1px solid @ghost_danger_30; color: @danger; background: @ghost_danger; }

#quick_action_btn[ghost="true"]:hover {
    background: rgba(255, 255, 255, 0.1);
    border-width: 2px;
}

#GlassCard[ghost="true"], #ai_guardian_card[ghost="true"], #health_card[ghost="true"], #card_auth[ghost="true"], #card_health[ghost="true"], #card_analytics[ghost="true"] {
    background-color: @ghost_bg_dark;
    border: 1px solid @ghost_border; /* Theme-aware ghost border */
}
#GlassCard[ghost="true"]:hover {
    border-color: @primary;
    background-color: @ghost_bg;
}

#activity_filter_btn[ghost="true"][checked="true"] {
    background: @ghost_primary;
    color: @primary;
    border: 1px solid @primary;
}
#mini_stat_label[ghost="true"] { color: @ghost_text_dim; }

#mini_stat_value[ghost="true"] { color: rgba(255, 255, 255, 0.4); }
#mini_stat_value[ghost="true"][status="danger"], #mini_stat_value[ghost="true"][status="critical"] { color: @ghost_danger_40; font-weight: 950; }
#mini_stat_value[ghost="true"][status="warning"] { color: @ghost_warning_40; font-weight: 950; }
#mini_stat_value[ghost="true"][status="success"] { color: @ghost_success_40; }
#mini_stat_value[ghost="true"][status="text_dim"] { color: @ghost_text_dim; }

#info_tile_value[ghost="true"] { color: rgba(255, 255, 255, 0.4); }
#info_tile_value[ghost="true"][status="danger"], #info_tile_value[ghost="true"][status="critical"] { color: @ghost_danger_40; font-weight: 950; }
#info_tile_value[ghost="true"][status="warning"] { color: @ghost_warning_40; font-weight: 950; }
#info_tile_value[ghost="true"][status="success"] { color: @ghost_success_40; }
#info_tile_value[ghost="true"][status="info"] { color: @ghost_primary_40; }

#tactical_metric_title[ghost="true"], #tactical_metric_label[ghost="true"] {
    color: @ghost_text_dim;
}

#tactical_metric_value[ghost="true"] { color: rgba(255, 255, 255, 0.4); }
#tactical_metric_value[ghost="true"][status="warning"] { color: @ghost_warning_40; font-weight: 950; }
#tactical_metric_value[ghost="true"][status="critical"], #tactical_metric_value[ghost="true"][status="danger"] { color: @ghost_danger_40; font-weight: 950; }
#tactical_metric_value[ghost="true"][status="success"] { color: @ghost_success_40; }
#tactical_metric_value[ghost="true"][status="info"] { color: @ghost_primary_40; }

/* UNIVERSAL GLOBAL HUD GLOW-GLASS */
#tactical_bar_fill[ghost="true"] {
    background-color: @ghost_primary_10; 
    border: 1px solid @ghost_primary_15; 
}

#tactical_bar_fill[ghost="true"][status="critical"],
#tactical_bar_fill[ghost="true"][status="danger"] {
    background-color: @ghost_danger_10;
    border: 1px solid @ghost_danger_15;
}

#tactical_bar_fill[ghost="true"][status="warning"] {
    background-color: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.15);
}

#tactical_bar_fill[ghost="true"][status="success"] {
    background-color: rgba(16, 185, 129, 0.1);
    border: 1px solid @ghost_success_15;
}

#btn_ghost_toggle {
    background: rgba(30, 41, 59, 0.2);
    border: 1px solid @ghost_primary_30;
    border-radius: 12px;
    font-size: 24px;
    padding: 0px;
}
#btn_ghost_toggle[ghost="true"] { 
    background: rgba(30, 41, 59, 0.05); 
    border-color: @ghost_primary_15;
}

/* UNIVERSAL IDENTITY BANNER GHOSTING */
#v_icon[ghost="true"], #v_type[ghost="true"] { color: @ghost_text_dim; }
#v_name[ghost="true"] { color: rgba(255, 255, 255, 0.4); }
#v_badge[ghost="true"] { background: @ghost_bg_light; border: 1px solid @ghost_border; }
#v_badge_status[ghost="true"], #v_badge_label[ghost="true"] { color: @ghost_text_dim; }

/* TERMINAL SEARCH GHOSTING */
#dash_search[ghost="true"], #search_vault[ghost="true"], #dash_search_input[ghost="true"] {
    background-color: @ghost_bg_light;
    border: 1px solid @ghost_border;
    color: rgba(255, 255, 255, 0.4);
}
#btn_ghost_toggle:hover {
    border-color: @primary;
}

#audit_status_pill {
    border-radius: 6px;
    padding: 2px;
    font-family: 'Consolas';
    font-size: 9px;
    font-weight: bold;
}
#audit_status_pill[state="critical"] { background: @ghost_danger_20; color: @danger; border: 1px solid @danger; }
#audit_status_pill[state="success"] { background: @ghost_success_20; color: @success; border: 1px solid @success; }
#audit_status_pill[state="default"] { background: rgba(148, 163, 184, 0.15); color: @text_dim; border: 1px solid @text_dim; }

#activity_feed_card {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 6px;
}
#activity_feed_card[severity="critical"] { border-left: 4px solid @danger; }
#activity_feed_card[severity="warning"] { border-left: 4px solid @warning; }
#activity_feed_card[severity="success"] { border-left: 4px solid @success; }

#activity_card_narrative {
    color: @text;
    font-family: 'Segoe UI', 'Inter';
    font-size: 10px;
    background: transparent;
    border: none;
}
#activity_card_meta {
    color: @text_dim;
    font-family: 'Consolas';
    font-size: 8px;
    background: transparent;
    border: none;
    text-transform: uppercase;
}

/* Force Global Tooltip Override in Dashboard Context */
QToolTip {
    background-color: @bg_sec;
    color: @text;
    border: 1px solid @primary;
    border-radius: 4px;
    font-size: 10px;
    padding: 4px;
    font-weight: 700;
    font-family: 'Consolas';
}
